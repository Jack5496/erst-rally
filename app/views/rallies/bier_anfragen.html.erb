    <% stations.each do |station| %>
        <% need_beer = station.beer_status=='<i class="fa fa-battery-empty" aria-hidden="true"></i>' %>
        <% if need_beer %>
            <% found_one = true %>
            <div class="panel panel-default">
                <div class="panel-body"><%= link_to station do %>
                    <div class="btn user_answer_btn" style="width: 100%;"><%= station.name %></div>
                    <% end %>
                </div>
            </div>
        
        <% end %>
    <% end %>
    
    <% if !found_one %>
        <div class="panel panel-default">
            <div class="panel-body">
